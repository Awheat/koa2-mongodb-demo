<%- include("header") %>
<h1 class="text-center">这是添加用户页</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <a class="btn btn-success" href="/" role="button">返回首页</a>
    </div>
    <div class="panel-body">
        <form action="/controller/add" method="post">
            <div class="form-group">
                <label>用户名</label>
                <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
                <label>密码</label>
                <input type="text" class="form-control" name="password">
            </div>
            <div class="form-group">
                <label>年龄</label>
                <input type="text" class="form-control" name="age">
            </div>
            <div class="form-group">
                <label>性别</label>
                <select class="form-control" name="gender">
                    <option value="0">女</option>
                    <option value="1">男</option>
                </select>
            </div>
            <div class="form-group">
                <label>电话</label>
                <input type="text" class="form-control" name="telephone">
            </div>
            <div class="form-group">
                <label>图像</label>
                <div class="upload">
                    <input type="file" name="files" id="upload" multiple="multiple"
                           accept="image/jpeg,image/png,image/gif">
                    <img src="" class="picture hide" alt="">
                </div>
            </div>
            <div class="form-group">
                <label>地址</label>
                <input type="text" class="form-control" name="address">
            </div>
            <input type="hidden" name="picture">
            <button type="submit" class="btn btn-default">提交</button>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        function sendFormData(formData) {
            $.ajax({
                url: '/controller/upload',
                type: 'POST',
                data: formData,
                cache: false,
                contentType: false,
                processData: false,
                success: function (res) {
                    console.log(res);
                    let picture = $(".picture");
                    let base = "/uploads/";
                    if (res.code === 200) {
                        $("input[type='hidden']").val(res.data[0]);
                        picture.attr("src", base + res.data[0]).removeClass("hide");
                    }
                },
                error: function () {
                    console.log("与服务器通信发生错误");
                }
            });
        }

        let selectedFiles = [];
        $('#upload').change(function (e) {
            // 获取文件列表对象
            let files = e.target.files || e.dataTransfer.files;
            selectedFiles = selectedFiles.concat(files);
            console.log(selectedFiles);

            //上传
            let formData = new FormData();

            formData.append('file', files[0])

            sendFormData(formData);
        });

    });
</script>
<%- include("footer") %>
